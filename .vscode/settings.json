{
    "files.exclude": {
        "**/.git": false
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "always"
    },
    "eslint.format.enable": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "[github-actions-workflow]": {
        "editor.tabSize": 2
    },
    "files.associations": {
        "**/.github/**/*.yml": "github-actions-workflow",
        "**/.github/**/*.yaml": "github-actions-workflow"
    }
}
