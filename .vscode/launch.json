{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Service",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "command": "npm run start --prefix services/${input:serviceName}",
      "env": {
        "ENV": "${input:env}",
        "NAMESPACE": "${input:env}"
      }
    },
    {
      "name": "Backoffice",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev --prefix services/backoffice",
      "env": {
        "ENV": "${input:env}",
        "NAMESPACE": "${input:env}"
      }
    },
    {
      "name": "Node Script",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev --prefix scripts/polymarket",
    },
    {
      "name": "GHA: Typescript",
      "type": "node-terminal",
      "request": "launch",
      "command": "node ${file}",
      "env": {
        "INPUT_TITLE": "title" // Value of core.getInput('title')
      }
    }
  ],
  "inputs": [
    {
      "id": "serviceName",
      "type": "pickString",
      "description": "Select the service to run",
      "options": [
        "cannon",
        "whatsapp"
      ]
    },
    {
      "id": "env",
      "type": "pickString",
      "description": "Select the environment",
      "options": [
        "local",
        "dev",
        "prod"
      ],
      "default": "local"
    }
  ]
}