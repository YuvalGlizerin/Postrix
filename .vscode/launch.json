  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Joby",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "command": "npm run start-local --prefix services/joby",
      "presentation": {
        "group": "Local Services"
      }
    },
    {
      "name": "GHA: Typescript",
      "type": "node-terminal",
      "request": "launch",
      "command": "ts-node ${file}",
      "env": {
        "INPUT_TITLE": "title" // Value of core.getInput('title')
      },
      "presentation": {
        "group": "Github Actions"
      }
    }
  ],
  "compounds": [
    {
      "name": "Local Services",
      "configurations": ["Joby"],
      "stopAll": true,
      "presentation": {
        "group": "Local Services",
        "order": 1
      }
    }
  ]
}