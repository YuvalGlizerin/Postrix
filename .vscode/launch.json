{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Service",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "command": "npm run start --watch --prefix services/${input:serviceName}",
      "env": {
        "ENV": "${input:env}",
        "NAMESPACE": "${input:env}",
        "IS_LOCAL_DEV": "true" // This is used to determine if the service is running on your local machine
      }
    },
    {
      "name": "GHA: Typescript",
      "type": "node-terminal",
      "request": "launch",
      "command": "ts-node ${file}",
      "env": {
        "INPUT_TITLE": "title" // Value of core.getInput('title')
      }
    }
  ],
  "inputs": [
    {
      "id": "serviceName",
      "type": "pickString",
      "description": "Select the service to run",
      "options": [
        "cannon",
        "joby",
        "capish"
      ]
    },
    {
      "id": "env",
      "type": "pickString",
      "description": "Select the environment",
      "options": [
        "local",
        "dev",
        "prod"
      ],
      "default": "local"
    }
  ]
}