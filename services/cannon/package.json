{
  "name": "cannon",
  "version": "1.0.0",
  "type": "module",
  "description": "A simple Hello World Cloud Function",
  "main": "src/index.ts",
  "engines": {
    "node": "23.10.0"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "start:local": "ENV=local node --experimental-strip-types --watch src/index.ts",
    "start:server": "node --experimental-strip-types src/index.ts",
    "test": "bash -c 'mkdir -p coverage && node --test --experimental-strip-types --experimental-test-coverage --test-reporter=spec --test-reporter=lcov --test-reporter-destination=stdout --test-reporter-destination=./coverage/lcov.info; genhtml -o coverage ./coverage/lcov.info'"
  },
  "dependencies": {
    "@types/node": "^22.13.14",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "pg": "^8.14.0"
  },
  "devDependencies": {
    "@types/pg": "^8.11.11"
  }
}
