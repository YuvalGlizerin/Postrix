REDIS_URL=redis://redis-master.redis.svc.cluster.local:6379
# NEXTAUTH_URL will be set dynamically based on the ingress hostname

# Enable dev bypass auth for ephemeral environments
# This adds a simple email-based login for @postrix.io addresses
ENABLE_DEV_AUTH_BYPASS=true

# Popup OAuth configuration
# This allows ephemeral environments to use OAuth without being registered
NEXT_PUBLIC_OAUTH_POPUP_URL=https://dev-backoffice.postrix.io
NEXT_PUBLIC_USE_POPUP_AUTH=true
